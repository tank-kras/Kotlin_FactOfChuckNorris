<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/ic_norris"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.101"/>
    <TextView
            android:text="TextView"
            android:layout_width="372dp"
            android:layout_height="187dp"
            android:id="@+id/factTv"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="168dp"
            android:layout_marginRight="168dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonNext"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="145dp"
            android:layout_marginStart="145dp" app:layout_constraintVertical_bias="0.45"
            app:layout_constraintHorizontal_bias="0.454"/>
    <Button
            android:text="@string/Next"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/buttonNext"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/factTv"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"
            android:layout_marginStart="152dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:id="@+id/progressBar" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonNext" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="172dp" android:layout_marginStart="172dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>